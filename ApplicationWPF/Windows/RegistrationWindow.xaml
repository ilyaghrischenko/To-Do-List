<Window x:Class="ApplicationWPF.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationWPF.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="350" Width="250"
        MaxHeight="340" MinHeight="350"
        MaxWidth="250" MinWidth="250"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Login:"
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"
                           FontWeight="Bold"/>
                <TextBox Grid.Row="1"
                         x:Name="LoginInput"
                         TextAlignment="Center"
                         BorderBrush="Blue"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Password:"
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"
                           FontWeight="Bold"/>
                <PasswordBox Grid.Row="1"
                             x:Name="PasswordInput"
                             HorizontalContentAlignment="Center"
                             BorderBrush="Blue"/>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Confirm Password:"
                           HorizontalAlignment="Center"
                           FontFamily="Times New Roman"
                           FontWeight="Bold"/>
                <PasswordBox Grid.Row="1"
                             x:Name="ConfirmPasswordInput"
                             HorizontalContentAlignment="Center"
                             BorderBrush="Blue"/>
            </Grid>

            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1"
                        Content="Sing up"
                        x:Name="SignUpButton"
                        Click="SignUpButton_Click"
                        BorderBrush="Blue"
                        FontFamily="Times New Roman"
                        FontWeight="Bold"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="1">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center">
                <Hyperlink x:Name="LogIn"
                           Click="LogIn_Click"
                           FontFamily="Times New Roman"
                           FontWeight="Bold">
                    Log in
                </Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</Window>
